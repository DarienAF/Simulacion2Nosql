                      <a href="/autores/edit/<%= Autor._id %>" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Editar
                      </a>
                      <form action="/autores/delete/<%= Autor._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">
                          <i class="fas fa-trash"></i> Eliminar
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }); %>
