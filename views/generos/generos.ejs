    <script>
            function genderFilter() {
        var genderFilter = normalizeString(document.getElementById('genderFilter').value); 
        var genderItems = document.querySelectorAll('.genre-item');

        genderItems.forEach(function(item) {
          var gender = normalizeString(item.getAttribute('data-gender')); 
          if (genderFilter === '' || gender === genderFilter) {
            item.style.display = ''; 
          } else {
            item.style.display = 'none'; 
          }
        });
      }

      function normalizeString(str) {
        return str
          .toLowerCase()  
          .normalize("NFD")
          .replace(/[\u0300-\u036f]/g, ""); 
      }

    </script>
