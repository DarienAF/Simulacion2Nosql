          <div class="container-fluid">
            <h1 class="mb-4">Generos</h1>
            <a href="/generos/new" class="btn btn-primary mb-3">Agregar nuevo genero</a>

            <!-- Filtro de Géneros -->
            <div class="filter-container">
              <label for="genderFilter">Filtrar por género:</label>
              <select id="genderFilter" class="filter-select" onchange="genderFilter()">
                <option value="">Todos</option>
                <option value="Acción">Acción</option>
                <option value="Comedia">Comedia</option>
                <option value="Drama">Drama</option>
                <option value="Terror">Terror</option>
                <option value="Ficcion">Ficcion</option>
              </select>
            </div>

            <!-- Tabla de Géneros -->
            <div class="genre-list">
              <ul id="genderList">
                <% generos.forEach(Genero => { %>
                  <li class="genre-item" data-gender="<%= Genero.genero %>">
                    <div class="genre-details">
                      <h2><a href="/generos/edit/<%= Genero._id %>" class="genre-name"><%= Genero.nombre %></a></h2>
                      <p><strong>Genero ID:</strong> <%= Genero.genero_id %></p>
                      <p><strong>Género:</strong> <%= Genero.genero %></p>
                      <p><strong>Descripción:</strong> <%= Genero.descripcion %></p>
                    </div>

                    <div class="genre-actions">
                      <a href="/generos/edit/<%= Genero._id %>" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Editar
                      </a>
                      <form action="/generos/delete/<%= Genero._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">
                          <i class="fas fa-trash"></i> Eliminar
                        </button>
                      </form>
                    </div>
                  </li>
                <% }); %>
              </ul>
            </div>
          </div>

