<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <title>Items</title>
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet" />
    <link href="css/sb-admin-2.min.css" rel="stylesheet" />
    <style>
      .filter-container {
        margin: 20px;
        text-align: center;
      }
      .search-input {
        width: 60%;
        padding: 10px;
        margin: 10px 0;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ccc;
      }
      .book-list {
        margin: 20px;
      }
      .book-item {
        background-color: #f8f9fc;
        border: 1px solid #ddd;
        margin-bottom: 15px;
        border-radius: 8px;
        padding: 20px;
        transition: all 0.3s ease;
      }
      .book-item:hover {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transform: scale(1.05);
      }
      .book-details h2 {
        font-size: 1.5rem;
        color: #2c3e50;
      }
      .book-details p {
        color: #7f8c8d;
      }
      .book-actions {
        margin-top: 20px;
      }
      .button {
        font-size: 14px;
        padding: 6px 12px;
        border-radius: 5px;
        text-decoration: none;
      }
      .edit-btn {
        background-color: #4e73df;
        color: white;
        margin-right: 10px;
      }
      .delete-btn {
        background-color: #e74a3b;
        color: white;
      }
      .edit-btn:hover {
        background-color: #2e59d9;
      }
      .delete-btn:hover {
        background-color: #d43f00;
      }
      .footer {
        background-color: #f8f9fc;
        padding: 20px;
        text-align: center;
        margin-top: 50px;
        border-top: 1px solid #ddd;
      }
    </style>
  </head>

  <body id="page-top">
    <div id="wrapper">
      <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
        <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
          <div class="sidebar-brand-icon rotate-n-15">
            <i class="fas fa-book"></i>
          </div>
          <div class="sidebar-brand-text mx-3">Biblioteca</div>
        </a>
        <hr class="sidebar-divider my-0" />
        <li class="nav-item active">
          <a class="nav-link" href="/">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>Dashboard</span></a>
        </li>
        <hr class="sidebar-divider d-none d-md-block" />
        <div class="text-center d-none d-md-inline">
          <button class="rounded-circle border-0" id="sidebarToggle"></button>
        </div>
        <hr class="sidebar-divider" />


<!-- ENLACES CRUD ===========================================================================================================-->
        <!-- Heading -->
          <!-- Heading -->
          <div class="sidebar-heading">Interface</div>

          <!-- Nav Item - ESPECIES -->
          <li class="nav-item">
 
           <a class="nav-link" href="/libros">
             <i class="fas fa-bookmark"></i>
             <span>Libros</span></a
           >
         </li>
           
         <li class="nav-item">
             <a class="nav-link" href="/generos">
               <i class="fas fa-list"></i>
               <span>Generos</span></a
             >
           </li>
 
           <li class="nav-item">
             <a class="nav-link" href="/autores">
               <i class="fas fa-pen"></i>
               <span>Autores</span></a
             >
           </li>
           
          <li class="nav-item">
            <a class="nav-link" href="/usuarios">
              <i class="fas fa-user"></i>
              <span>Usuarios</span></a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/prestamos">
              <i class="fas fa-inbox"></i>
              <span>Prestamos</span></a
            >
          </li>

      </ul>

      <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
          <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
            <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
              <i class="fa fa-bars"></i>
            </button>
            <ul class="navbar-nav ml-auto">
              <div class="topbar-divider d-none d-sm-block"></div>
              <li class="nav-item dropdown no-arrow">
                <span class="mr-2 d-none d-lg-inline text-gray-600 small">Grupo 4</span>
              </li>
            </ul>
          </nav>

          <div class="container-fluid">
            <h1 class="mb-4">Libros</h1>
            <a href="/libros/new" class="btn btn-primary mb-3">Agregar nuevo libro</a>

            <div class="filter-container">
              <input type="text" id="searchInput" class="search-input" placeholder="Buscar autor..." onkeyup="bookFilter()">
            </div>

            <div class="book-list">
              <ul id="bookList">
                <% libros.forEach(libro => { %>
                  <li class="book-item" data-name="<%= libro.autor.toLowerCase() %>" data-genero="<%= libro.genero %>" data-ubicacion="<%= libro.ubicacion %>">
                    <div class="book-details">
                      <h2><a href="/libros/<%= libro._id %>" class="book-title"><%= libro.titulo %></a></h2>
                      <p><strong>Autor:</strong> <%= libro.autor %></p>
                      <p><strong>Año de Publicación:</strong> <%= libro.anio_publicacion %></p>
                      <p><strong>Género:</strong> <%= libro.genero %> | <strong>Ubicación:</strong> <%= libro.ubicacion %></p>
                    </div>

                    <div class="book-actions">
                      <a href="/libros/edit/<%= libro._id %>" class="button edit-btn">Editar</a>
                      <form action="/libros/delete/<%= libro._id %>" method="POST" style="display:inline;">
                        <button type="submit" class="button delete-btn">Eliminar</button>
                      </form>
                    </div>
                  </li>
                <% }); %>
              </ul>
            </div>
          </div>

          <footer class="footer">
            <div class="container my-auto">
              <div class="copyright text-center my-auto">
                <span>Copyright &copy; Your Website 2024</span>
              </div>
            </div>
          </footer>
        </div>
      </div>
    </div>

    <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
    </a>

    <script>
      function bookFilter() {
        var input = document.getElementById('searchInput');
        var filter = input.value.toLowerCase();
        var list = document.getElementById('bookList');
        var items = list.getElementsByTagName('li'); 

        
        for (var i = 0; i < items.length; i++) {
          var item = items[i];
          var authorName = item.getAttribute('data-name'); 

          
          if (authorName.indexOf(filter) > -1) {
            item.style.display = "";
          } else {
            item.style.display = "none"; 
          }
        }
      }
    </script>

    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="js/sb-admin-2.min.js"></script>
    <script src="js/demo/chart-area-demo.js"></script>
    <script src="js/demo/chart-pie-demo.js"></script>
  </body>
</html>
